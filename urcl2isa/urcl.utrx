    INC @A @A
}
SUB :: R A R != {
    NOT @C @C
    ADD @A @B @C
    INC @A @A
    NOT @C @C
}
SUB :: R A A {
    NOT R1 @C
    ADD @A @B R1
    INC @A @A
}
JMP :: A {
    BGE @A R0 R0
}
