ADD :: R R <> I {
    IMM R1 @C
    ADD @A @B R1
}
ADD :: R I I {
    IMM R1 @B
    ADD @A R1 @C
}
IMM :: R R {
    ADD @A @B R0
}
NOR :: R R <> I {
    IMM R1 @C
    NOR @A @B R1
}
NOR :: R I I {
    IMM @A @B
    NOR @A @A @C
}
RSH :: R I {
    IMM @A @B
    RSH @A @A
}
BGE :: A A == A {
    BGE @A R0 R0
}
BGE :: I A A {
    IMM R1 @A
    BGE R1 @B @C
}
BGE :: R R I {
    IMM R1 @C
    BGE @A @B R1
}
BGE :: R I R {
    IMM R1 @B
    BGE @A R1 @C
}
BGE :: R I I {
    BGE R1 @B
