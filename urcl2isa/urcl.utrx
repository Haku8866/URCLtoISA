}
LOD :: R I {
    IMM R1 @B
    LOD @A R1
}
STR :: A I {
    IMM R1 @B
    STR @A R1
}
STR :: I A {
    IMM R1 @A
    STR R1 @B
}
OUT :: O I {
    IMM R1 @B
    OUT @A R1
}

